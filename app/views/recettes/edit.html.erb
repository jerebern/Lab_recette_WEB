<%= form_for(@recette) do |f| %>
  <%= f.label(:titre) %>
  <%= @recette.errors[:titre].join('<br />') %>
  <br/>
  <%= f.text_field(:titre) %>
  <br />
  <%= f.label(:etape) %>
  <%= @recette.errors[:etape].join('<br />') %>
  <br/>
  <%= f.text_area(:etapes, rows: 20, cols:100) %>
  <br />
  <%= submit_tag("Modifier") %>
<% end %>