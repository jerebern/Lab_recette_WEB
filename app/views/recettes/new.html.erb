
  <div class="w3-white w3-xlarge" style="max-width:1200px;margin:auto">
    <div class="w3-center w3-padding-16">Ajouter une recette</div>
</div>
<%= form_for(@recette, method: "post") do |r| %>
  <%= r.label(:titre) %>
  <%= @recette.errors[:titre].join('<br />') %>
  <br/>
  <%= r.text_field(:titre) %>
  <br />
  <%= r.label(:etapes) %>
  <%= @recette.errors[:etapes].join('<br />') %>
  <br/>
  <%= r.text_area(:etapes, rows: 20, cols:100) %>
  <br/>
   <%= r.label("Ingredients :") %>
  <br/>

  <% options = options_from_collection_for_select(@ingredients, 'id', 'nom') %>
  <%= r.select :'1',
        options,
      selected:@select %>
  <br /> 
  <%= submit_tag("Ajouter") %>
<% end %>