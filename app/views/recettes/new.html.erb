<%= form_for(@recette, method: "post") do |r| %>
  <%= r.label(:titre) %>
  <%= @recette.errors[:titre].join('<br />') %>
  <br/>
  <%= r.text_field(:titre) %>
  <br />
  <%= r.label(:etapes) %>
  <%= @recette.errors[:etapes].join('<br />') %>
  <br/>
  <%= r.text_area(:etapes, rows: 20, cols:100) %>
  <br />
  <%= submit_tag("Ajouter") %>
<% end %>